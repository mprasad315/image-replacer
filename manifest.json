{
	"manifest_version": 2,
	"name": "Image Replacer",
	"version": "0.1",

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content.js"]
	}],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Image Replacer"
	},
	"permissions": ["activeTab"]
}
